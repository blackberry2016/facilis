<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CardView.Full" parent="CardView.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="CardView.Wrap" parent="CardView.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">8dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="DragHandleDark">
        <item name="android:id">@id/drag_handle_image</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/drag_handle_dark</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:elevation">10dp</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
    </style>

    <style name="DragHandleLight">
        <item name="android:id">@id/drag_handle_image</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/drag_handle_light</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:elevation">10dp</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
    </style>

    <item name="drag_handle_image" type="id" />
</resources>
