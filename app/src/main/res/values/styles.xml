<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/shuttle_grey</item>
        <item name="colorPrimaryDark">@color/shuttle_grey</item>
        <item name="colorAccent">@color/crusoe</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CardView.Full" parent="CardView.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="CardView.WrapHeight" parent="CardView.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">8dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="CardView.WrapWidthHeight" parent="CardView.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="DragHandleDark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/drag_handle_dark</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:elevation">10dp</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
    </style>

    <style name="DragHandleLight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/drag_handle_light</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:elevation">10dp</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
    </style>

    <style name="MatchParentMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchParentWrapContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapContentMatchParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapContentWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DragAreaFull">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="DragAreaWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:elevation">10dp</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
    </style>

    <style name="BlurLayoutFullScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:visibility">invisible</item>
        <item name="blk_blurRadius">20</item>
        <item name="blk_downscaleFactor">0.12</item>
        <item name="blk_fps">0</item>
    </style>
</resources>
