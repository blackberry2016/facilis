<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchParentMatchParent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.prembros.facilis.implementation.MainActivity">

    <TextView
        style="@style/MatchParentWrapContent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="120dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/facilis_sample"
        android:textColor="@color/grey_0_7"
        android:textSize="40sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/recyclerViewImplementation"
        style="@style/WrapContentWrapContent"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="@color/cornflower_blue"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <TextView
            style="@style/WrapContentWrapContent"
            android:padding="20dp"
            android:text="@string/recyclerview_implementation"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/scrollViewImplementation"
        style="@style/WrapContentWrapContent"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <TextView
            style="@style/WrapContentWrapContent"
            android:padding="20dp"
            android:text="@string/scrollview_implementation"
            android:textAllCaps="false"
            android:textColor="@color/grey"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/epoxyImplementation"
        style="@style/WrapContentWrapContent"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/faded_red"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <TextView
            style="@style/WrapContentWrapContent"
            android:padding="20dp"
            android:text="@string/epoxy_implementation"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

</LinearLayout>
